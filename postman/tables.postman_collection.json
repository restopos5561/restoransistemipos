{
  "info": {
    "name": "Tables API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get Tables",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/tables?branchId=1&status=IDLE&page=1&limit=10",
          "host": ["{{baseUrl}}"],
          "path": ["api", "tables"],
          "query": [
            {
              "key": "branchId",
              "value": "1"
            },
            {
              "key": "status",
              "value": "IDLE"
            },
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "limit",
              "value": "10"
            }
          ]
        },
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ]
      }
    },
    {
      "name": "Create Table",
      "request": {
        "method": "POST",
        "url": {
          "raw": "{{baseUrl}}/api/tables",
          "host": ["{{baseUrl}}"],
          "path": ["api", "tables"]
        },
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"branchId\": 1,\n    \"tableNumber\": \"A1\",\n    \"capacity\": 4,\n    \"location\": \"Salon 1\"\n}"
        }
      }
    },
    {
      "name": "Update Table Status",
      "request": {
        "method": "PATCH",
        "url": {
          "raw": "{{baseUrl}}/api/tables/:id/status",
          "host": ["{{baseUrl}}"],
          "path": ["api", "tables", ":id", "status"],
          "variable": [
            {
              "key": "id",
              "value": "1"
            }
          ]
        },
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"status\": \"OCCUPIED\"\n}"
        }
      }
    },
    {
      "name": "Merge Tables",
      "request": {
        "method": "POST",
        "url": {
          "raw": "{{baseUrl}}/api/tables/merge",
          "host": ["{{baseUrl}}"],
          "path": ["api", "tables", "merge"]
        },
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"mainTableId\": 1,\n    \"tableIdsToMerge\": [2, 3]\n}"
        }
      }
    },
    {
      "name": "Transfer Table",
      "request": {
        "method": "POST",
        "url": {
          "raw": "{{baseUrl}}/api/tables/transfer",
          "host": ["{{baseUrl}}"],
          "path": ["api", "tables", "transfer"]
        },
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"fromTableId\": 1,\n    \"toTableId\": 5\n}"
        }
      }
    },
    {
      "name": "Update Table",
      "request": {
        "method": "PUT",
        "url": {
          "raw": "{{baseUrl}}/api/tables/:id",
          "host": ["{{baseUrl}}"],
          "path": ["api", "tables", ":id"],
          "variable": [
            {
              "key": "id",
              "value": "1",
              "description": "Masa ID"
            }
          ]
        },
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"tableNumber\": \"A1\",\n    \"capacity\": 4,\n    \"location\": \"Salon 1\",\n    \"isActive\": true\n}"
        }
      }
    }
  ]
} 