{
  "info": {
    "name": "Restaurants API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get Restaurants",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/restaurants",
          "host": ["{{baseUrl}}"],
          "path": ["api", "restaurants"]
        },
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ]
      }
    },
    {
      "name": "Get Restaurant By Id",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/restaurants/{{restaurantId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "restaurants", "{{restaurantId}}"]
        },
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ]
      }
    },
    {
      "name": "Create Restaurant",
      "request": {
        "method": "POST",
        "url": {
          "raw": "{{baseUrl}}/api/restaurants",
          "host": ["{{baseUrl}}"],
          "path": ["api", "restaurants"]
        },
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"name\": \"Test Restaurant\",\n    \"address\": \"Test Address\",\n    \"phone\": \"1234567890\",\n    \"email\": \"test@restaurant.com\"\n}"
        }
      }
    },
    {
      "name": "Update Restaurant",
      "request": {
        "method": "PUT",
        "url": {
          "raw": "{{baseUrl}}/api/restaurants/{{restaurantId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "restaurants", "{{restaurantId}}"]
        },
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"name\": \"Updated Restaurant\",\n    \"address\": \"Updated Address\",\n    \"phone\": \"0987654321\",\n    \"email\": \"updated@restaurant.com\"\n}"
        }
      }
    },
    {
      "name": "Delete Restaurant",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "{{baseUrl}}/api/restaurants/{{restaurantId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "restaurants", "{{restaurantId}}"]
        },
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ]
      }
    }
  ]
} 