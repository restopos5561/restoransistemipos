{
  "info": {
    "name": "Categories API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get Categories",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/categories?restaurantId=1&search=yemek",
          "host": ["{{baseUrl}}"],
          "path": ["api", "categories"],
          "query": [
            {
              "key": "restaurantId",
              "value": "1"
            },
            {
              "key": "search",
              "value": "yemek"
            },
            {
              "key": "isActive",
              "value": "true"
            }
          ]
        },
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ]
      }
    },
    {
      "name": "Get Category By Id",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/categories/:id",
          "host": ["{{baseUrl}}"],
          "path": ["api", "categories", ":id"],
          "variable": [
            {
              "key": "id",
              "value": "1"
            }
          ]
        },
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ]
      }
    },
    {
      "name": "Create Category",
      "request": {
        "method": "POST",
        "url": {
          "raw": "{{baseUrl}}/api/categories",
          "host": ["{{baseUrl}}"],
          "path": ["api", "categories"]
        },
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"restaurantId\": 1,\n    \"name\": \"Ana Yemekler\",\n    \"description\": \"Ana yemek kategorisi\",\n    \"isActive\": true\n}"
        }
      }
    },
    {
      "name": "Update Category",
      "request": {
        "method": "PUT",
        "url": {
          "raw": "{{baseUrl}}/api/categories/:id",
          "host": ["{{baseUrl}}"],
          "path": ["api", "categories", ":id"],
          "variable": [
            {
              "key": "id",
              "value": "1"
            }
          ]
        },
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"name\": \"Sıcak Ana Yemekler\",\n    \"description\": \"Sıcak ana yemek kategorisi\",\n    \"isActive\": true\n}"
        }
      }
    },
    {
      "name": "Delete Category",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "{{baseUrl}}/api/categories/:id",
          "host": ["{{baseUrl}}"],
          "path": ["api", "categories", ":id"],
          "variable": [
            {
              "key": "id",
              "value": "1"
            }
          ]
        },
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ]
      }
    }
  ]
} 