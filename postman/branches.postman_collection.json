{
  "info": {
    "name": "Branches API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get Restaurant Branches",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/branches/restaurant/:restaurantId",
          "host": ["{{baseUrl}}"],
          "path": ["api", "branches", "restaurant", ":restaurantId"],
          "variable": [
            {
              "key": "restaurantId",
              "value": "1",
              "description": "Restoran ID"
            }
          ]
        },
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "description": "Restorana ait şubeleri listeler"
      }
    },
    {
      "name": "Get Branch By ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/branches/:id",
          "host": ["{{baseUrl}}"],
          "path": ["api", "branches", ":id"],
          "variable": [
            {
              "key": "id",
              "value": "1",
              "description": "Şube ID"
            }
          ]
        },
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "description": "ID'ye göre şube detaylarını getirir"
      }
    },
    {
      "name": "Create Branch",
      "request": {
        "method": "POST",
        "url": {
          "raw": "{{baseUrl}}/api/branches/restaurant/:restaurantId",
          "host": ["{{baseUrl}}"],
          "path": ["api", "branches", "restaurant", ":restaurantId"],
          "variable": [
            {
              "key": "restaurantId",
              "value": "1",
              "description": "Restoran ID"
            }
          ]
        },
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"name\": \"Test Branch\",\n    \"address\": \"Test Address\",\n    \"isMainBranch\": true,\n    \"settings\": {\n        \"currency\": \"TRY\",\n        \"timezone\": \"Europe/Istanbul\",\n        \"dailyCloseTime\": \"23:00\",\n        \"workingHours\": \"09:00-23:00\"\n    }\n}"
        },
        "description": "Yeni şube oluşturur"
      }
    },
    {
      "name": "Update Branch",
      "request": {
        "method": "PUT",
        "url": {
          "raw": "{{baseUrl}}/api/branches/:id",
          "host": ["{{baseUrl}}"],
          "path": ["api", "branches", ":id"],
          "variable": [
            {
              "key": "id",
              "value": "1",
              "description": "Şube ID"
            }
          ]
        },
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"name\": \"Updated Branch\",\n    \"isActive\": true,\n    \"settings\": {\n        \"workingHours\": \"10:00-22:00\"\n    }\n}"
        },
        "description": "Şube bilgilerini günceller"
      }
    },
    {
      "name": "Delete Branch",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "{{baseUrl}}/api/branches/:id",
          "host": ["{{baseUrl}}"],
          "path": ["api", "branches", ":id"],
          "variable": [
            {
              "key": "id",
              "value": "1",
              "description": "Şube ID"
            }
          ]
        },
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "description": "Şubeyi siler (Ana şube silinemez)"
      }
    }
  ]
} 