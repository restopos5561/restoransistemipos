  "item": [
    {
      "name": "Get All Permissions",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "if (!pm.environment.get('accessToken')) {",
              "    console.log('Access token not found in environment variables!')",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/permissions",
          "host": ["{{baseUrl}}"],
          "path": ["api", "permissions"]
        },
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ]
      }
    },
