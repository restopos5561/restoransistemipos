{
  "info": {
    "name": "Card Payments API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get All Card Payments",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/card-payments?paymentId=1&orderId=1&cardType=VISA&page=1&limit=10",
          "host": ["{{baseUrl}}"],
          "path": ["api", "card-payments"],
          "query": [
            {
              "key": "paymentId",
              "value": "1",
              "description": "Ödeme ID'si ile filtreleme"
            },
            {
              "key": "orderId",
              "value": "1",
              "description": "Sipariş ID'si ile filtreleme"
            },
            {
              "key": "cardType",
              "value": "VISA",
              "description": "Kart tipi ile filtreleme"
            },
            {
              "key": "startDate",
              "value": "2024-01-01T00:00:00Z"
            },
            {
              "key": "endDate",
              "value": "2024-12-31T23:59:59Z"
            },
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "limit",
              "value": "10"
            }
          ]
        },
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ]
      }
    },
    {
      "name": "Create Card Payment",
      "request": {
        "method": "POST",
        "url": {
          "raw": "{{baseUrl}}/api/card-payments",
          "host": ["{{baseUrl}}"],
          "path": ["api", "card-payments"]
        },
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"paymentId\": 1,\n    \"cardType\": \"VISA\",\n    \"lastFourDigits\": \"1234\",\n    \"transactionId\": \"tx123abc\"\n}"
        }
      }
    },
    {
      "name": "Get Card Payment By Id",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/card-payments/:id",
          "host": ["{{baseUrl}}"],
          "path": ["api", "card-payments", ":id"],
          "variable": [
            {
              "key": "id",
              "value": "1"
            }
          ]
        },
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ]
      }
    },
    {
      "name": "Get Card Payment By Payment Id",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/card-payments/payment/:paymentId",
          "host": ["{{baseUrl}}"],
          "path": ["api", "card-payments", "payment", ":paymentId"],
          "variable": [
            {
              "key": "paymentId",
              "value": "1"
            }
          ]
        },
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ]
      }
    }
  ]
} 