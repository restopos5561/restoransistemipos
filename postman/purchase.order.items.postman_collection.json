{
  "info": {
    "name": "Purchase Order Items API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get All Purchase Order Items",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/purchase-order-items?purchaseOrderId=1&productId=1&page=1&limit=10",
          "host": ["{{baseUrl}}"],
          "path": ["api", "purchase-order-items"],
          "query": [
            {"key": "purchaseOrderId", "value": "1"},
            {"key": "productId", "value": "1"},
            {"key": "page", "value": "1"},
            {"key": "limit", "value": "10"}
          ]
        },
        "header": [
          {"key": "Authorization", "value": "Bearer {{accessToken}}"}
        ]
      }
    },
    {
      "name": "Create Purchase Order Item",
      "request": {
        "method": "POST",
        "url": {
          "raw": "{{baseUrl}}/api/purchase-order-items",
          "host": ["{{baseUrl}}"],
          "path": ["api", "purchase-order-items"]
        },
        "header": [
          {"key": "Authorization", "value": "Bearer {{accessToken}}"},
          {"key": "Content-Type", "value": "application/json"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"purchaseOrderId\": 1,\n    \"productId\": 3,\n    \"quantity\": 25,\n    \"unitPrice\": 5,\n    \"totalPrice\": 125\n}"
        }
      }
    },
    {
      "name": "Get Purchase Order Item By ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/purchase-order-items/:id",
          "host": ["{{baseUrl}}"],
          "path": ["api", "purchase-order-items", ":id"],
          "variable": [{"key": "id", "value": "1"}]
        },
        "header": [
          {"key": "Authorization", "value": "Bearer {{accessToken}}"}
        ]
      }
    },
    {
      "name": "Update Purchase Order Item",
      "request": {
        "method": "PUT",
        "url": {
          "raw": "{{baseUrl}}/api/purchase-order-items/:id",
          "host": ["{{baseUrl}}"],
          "path": ["api", "purchase-order-items", ":id"],
          "variable": [{"key": "id", "value": "1"}]
        },
        "header": [
          {"key": "Authorization", "value": "Bearer {{accessToken}}"},
          {"key": "Content-Type", "value": "application/json"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"quantity\": 75,\n    \"unitPrice\": 4.8,\n    \"totalPrice\": 360\n}"
        }
      }
    },
    {
      "name": "Delete Purchase Order Item",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "{{baseUrl}}/api/purchase-order-items/:id",
          "host": ["{{baseUrl}}"],
          "path": ["api", "purchase-order-items", ":id"],
          "variable": [{"key": "id", "value": "1"}]
        },
        "header": [
          {"key": "Authorization", "value": "Bearer {{accessToken}}"}
        ]
      }
    },
    {
      "name": "Get Items By Purchase Order ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/purchase-order-items/order/:purchaseOrderId",
          "host": ["{{baseUrl}}"],
          "path": ["api", "purchase-order-items", "order", ":purchaseOrderId"],
          "variable": [{"key": "purchaseOrderId", "value": "1"}]
        },
        "header": [
          {"key": "Authorization", "value": "Bearer {{accessToken}}"}
        ]
      }
    }
  ]
