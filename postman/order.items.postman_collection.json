{
  "info": {
    "name": "Order Items API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get All Order Items",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/order-items?orderId=1&productId=1&type=SALE&status=PENDING&page=1&limit=10",
          "host": ["{{baseUrl}}"],
          "path": ["api", "order-items"],
          "query": [
            {"key": "orderId", "value": "1"},
            {"key": "productId", "value": "1"},
            {"key": "type", "value": "SALE"},
            {"key": "status", "value": "PENDING"},
            {"key": "page", "value": "1"},
            {"key": "limit", "value": "10"}
          ]
        },
        "header": [
          {"key": "Authorization", "value": "Bearer {{accessToken}}"}
        ]
      }
    },
    {
      "name": "Get Order Item By Id",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/order-items/:id",
          "host": ["{{baseUrl}}"],
          "path": ["api", "order-items", ":id"],
          "variable": [{"key": "id", "value": "1"}]
        },
        "header": [
          {"key": "Authorization", "value": "Bearer {{accessToken}}"}
        ]
      }
    },
    {
      "name": "Create Order Item",
      "request": {
        "method": "POST",
        "url": {
          "raw": "{{baseUrl}}/api/order-items",
          "host": ["{{baseUrl}}"],
          "path": ["api", "order-items"]
        },
        "header": [
          {"key": "Authorization", "value": "Bearer {{accessToken}}"},
          {"key": "Content-Type", "value": "application/json"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"orderId\": 1,\n    \"productId\": 1,\n    \"quantity\": 2,\n    \"unitPrice\": 42,\n    \"totalPrice\": 84,\n    \"selectedOptions\": [{\"id\": 1}, {\"id\": 2}],\n    \"type\": \"SALE\",\n    \"orderItemStatus\": \"PENDING\"\n}"
        }
      }
    },
    {
      "name": "Update Order Item",
      "request": {
        "method": "PUT",
        "url": {
          "raw": "{{baseUrl}}/api/order-items/:id",
          "host": ["{{baseUrl}}"],
          "path": ["api", "order-items", ":id"],
          "variable": [{"key": "id", "value": "1"}]
        },
        "header": [
          {"key": "Authorization", "value": "Bearer {{accessToken}}"},
          {"key": "Content-Type", "value": "application/json"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"quantity\": 3,\n    \"selectedOptions\": [{\"id\": 1}, {\"id\": 3}],\n    \"orderItemStatus\": \"PREPARING\"\n}"
        }
      }
    },
    {
      "name": "Delete Order Item",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "{{baseUrl}}/api/order-items/:id",
          "host": ["{{baseUrl}}"],
          "path": ["api", "order-items", ":id"],
          "variable": [{"key": "id", "value": "1"}]
        },
        "header": [
          {"key": "Authorization", "value": "Bearer {{accessToken}}"}
        ]
      }
    },
    {
      "name": "Get Order Items By Order",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/order-items/order/:orderId",
          "host": ["{{baseUrl}}"],
          "path": ["api", "order-items", "order", ":orderId"],
