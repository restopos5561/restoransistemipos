{
  "info": {
    "name": "Recipes API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get All Recipes",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/recipes?page=1&limit=10",
          "host": ["{{baseUrl}}"],
          "path": ["api", "recipes"],
          "query": [
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "limit",
              "value": "10"
            },
            {
              "key": "productId",
              "value": "",
              "disabled": true
            }
          ]
        },
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ]
      }
    },
    {
      "name": "Create Recipe",
      "request": {
        "method": "POST",
        "url": {
          "raw": "{{baseUrl}}/api/recipes",
          "host": ["{{baseUrl}}"],
          "path": ["api", "recipes"]
        },
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"productId\": 1,\n    \"ingredients\": [\n        {\n            \"name\": \"Köfte\",\n            \"quantity\": 180,\n            \"unit\": \"gram\",\n            \"cost\": 25.50,\n            \"waste\": 5\n        },\n        {\n            \"name\": \"Tuz\",\n            \"quantity\": 5,\n            \"unit\": \"gram\",\n            \"cost\": 0.25,\n            \"waste\": 0\n        },\n        {\n            \"name\": \"Karabiber\",\n            \"quantity\": 2,\n            \"unit\": \"gram\",\n            \"cost\": 0.50,\n            \"waste\": 0\n        }\n    ]\n}"
        }
      }
    },
    {
      "name": "Get Recipe by ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/recipes/:id",
          "host": ["{{baseUrl}}"],
          "path": ["api", "recipes", ":id"],
          "variable": [
            {
              "key": "id",
              "value": "1"
            }
          ]
        },
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ]
      }
    },
    {
      "name": "Update Recipe",
      "request": {
        "method": "PUT",
        "url": {
          "raw": "{{baseUrl}}/api/recipes/:id",
          "host": ["{{baseUrl}}"],
          "path": ["api", "recipes", ":id"],
          "variable": [
            {
              "key": "id",
              "value": "1"
            }
          ]
        },
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"ingredients\": [\n        {\n            \"name\": \"Köfte\",\n            \"quantity\": 200,\n            \"unit\": \"gram\",\n            \"cost\": 28.50,\n            \"waste\": 5\n        },\n        {\n            \"name\": \"Tuz\",\n            \"quantity\": 6,\n            \"unit\": \"gram\",\n            \"cost\": 0.25,\n            \"waste\": 0\n        },\n        {\n            \"name\": \"Karabiber\",\n            \"quantity\": 3,\n            \"unit\": \"gram\",\n            \"cost\": 0.50,\n            \"waste\": 0\n        }\n    ]\n}"
        }
      }
    },
    {
      "name": "Delete Recipe",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "{{baseUrl}}/api/recipes/:id",
          "host": ["{{baseUrl}}"],
          "path": ["api", "recipes", ":id"],
          "variable": [
            {
              "key": "id",
              "value": "1"
            }
          ]
        },
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ]
      }
    },
    {
      "name": "Get Recipe by Product ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/recipes/product/:productId",
          "host": ["{{baseUrl}}"],
          "path": ["api", "recipes", "product", ":productId"],
          "variable": [
            {
              "key": "productId",
              "value": "1"
            }
          ]
        },
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ]
      }
    },
    {
      "name": "Calculate Recipe Cost",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/recipes/:id/cost",
          "host": ["{{baseUrl}}"],
          "path": ["api", "recipes", ":id", "cost"],
          "variable": [
            {
              "key": "id",
              "value": "1"
            }
          ]
        },
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ]
      }
    },
    {
      "name": "Get Recipe Version History",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/recipes/:id/versions",
          "host": ["{{baseUrl}}"],
          "path": ["api", "recipes", ":id", "versions"],
          "variable": [
            {
              "key": "id",
              "value": "1"
            }
          ]
        },
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ]
      }
    },
    {
      "name": "Compare Recipes",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/recipes/compare?recipeId1=1&recipeId2=2",
          "host": ["{{baseUrl}}"],
          "path": ["api", "recipes", "compare"],
          "query": [
            {
              "key": "recipeId1",
              "value": "1"
            },
            {
              "key": "recipeId2",
              "value": "2"
            }
          ]
        },
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ]
      }
    }
  ]
} 