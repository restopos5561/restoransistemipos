{
  "info": {
    "name": "Accounts API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get All Accounts",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/accounts?restaurantId=1&branchId=1",
          "host": ["{{baseUrl}}"],
          "path": ["api", "accounts"],
          "query": [
            {"key": "restaurantId", "value": "1"},
            {"key": "branchId", "value": "1"}
          ]
        },
        "header": [
          {"key": "Authorization", "value": "Bearer {{accessToken}}"}
        ]
      }
    },
    {
      "name": "Create Account",
      "request": {
        "method": "POST",
        "url": {
          "raw": "{{baseUrl}}/api/accounts",
          "host": ["{{baseUrl}}"],
          "path": ["api", "accounts"]
        },
        "header": [
          {"key": "Authorization", "value": "Bearer {{accessToken}}"},
          {"key": "Content-Type", "value": "application/json"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"name\": \"Kasa 1\",\n    \"type\": \"CASH\",\n    \"branchId\": 1,\n    \"restaurantId\": 1,\n    \"initialBalance\": 1000\n}"
        }
      }
    },
    {
      "name": "Get Account Balance",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/accounts/balance",
          "host": ["{{baseUrl}}"],
          "path": ["api", "accounts", "balance"]
        },
        "header": [
          {"key": "Authorization", "value": "Bearer {{accessToken}}"}
        ]
      }
    }
  ]
} 